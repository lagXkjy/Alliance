/* pages/Confirmation/Confirmation.wxss */
.header{
  display: flex;
  align-items: center;
  background: #fff;
  height: 200rpx;
  border-bottom: 1rpx solid #e0e0e0;
  padding: 0 30rpx;
}
.img{
  margin-right: 20rpx;
}
.img>image{
  width: 280rpx;
  height: 140rpx;
}
.textbox{
  height:140rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.money{
  color: #d1291a;
  font-weight: bold;
}
.content{
  margin-top: 20rpx;
  border-top: 1rpx solid #e0e0e0;
  background: #fff;
}
.content>view{
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #e0e0e0;
}
input{
  padding-left: 30rpx;
}
.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  height: 105rpx;
  background: #fff;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #e0e0e0;
}
.footer>view:nth-child(1){
  height: 100%;
  width: 430rpx;
  background: #fff;
  color: #d1291a;
  text-align: right;
  padding-right: 30rpx;
  line-height: 105rpx;
}
.footer>view:nth-child(2){
  height: 100%;
  flex: 1;
  background: #d1291a;
  color:#fff;
  line-height: 105rpx;
  text-align: center;
  font-size: 37rpx;
}