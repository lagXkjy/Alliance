/* pages/mytab/mytab.wxss */

.header {
  height: 200rpx;
  position: relative;
  margin-bottom: 20rpx;
}

.header>image {
  position: absolute;
  top: 0;
  left: 0;
}

.headimg {
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  padding: 0 40rpx;
  box-sizing: border-box;
  align-items: center;
  color: #fff;
  font-weight: bold;
}

.headimg>image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.ffoter .lasta:last-child {
  border-bottom: 1px solid #e0e0e0;
}

.lasta {
  height: 102rpx;
  background: #fff;
  display: flex;
  align-items: center;
  background: #fff;
  font-size: 28rpx;
  border-radius: 0;
  padding-left: 30rpx;
  padding-right: 30rpx;
  border-top: 1px solid #e0e0e0;
  justify-content: space-between;
  -webkit-justify-content: space-between;
}

.this-flex {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
