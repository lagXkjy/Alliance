/* component/poster.wxss */

.wrapper {
  width: 100vw;
  height: 100vh;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10;
}

.canvas-box {
  width: 600rpx;
  height: 1065rpx;
  overflow: hidden;
  border-radius: 10rpx;
  display: block;
  margin-bottom: 30rpx;
  position: relative;
}

.canvas {
  width: 600rpx;
  height: 1065rpx;
  border-radius: 10rpx;
}

.footer {
  display: flex;
  justify-content: space-between;
  width: 600rpx;
}

.close {
  height: 80rpx;
  display: flex;
  padding: 0 50rpx;
  align-items: center;
  color: #fff;
  border-radius: 10rpx;
  font-weight: bold;
  font-size: 34rpx;
  background: #51aa38;
}

.save {
  height: 80rpx;
  display: flex;
  padding: 0 50rpx;
  align-items: center;
  color: #fff;
  border-radius: 50rpx;
  font-size: 34rpx;
  border: 1rpx solid #fff;
  margin: 0 auto;
}

.Close {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 14rpx;
  right: 12rpx;
  z-index: 10;
}
